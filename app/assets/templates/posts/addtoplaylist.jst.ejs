<select class="playlist-dropdown">
  <option value="">

  <% userPlaylists.forEach(function (playlist) { %>

    <option name="playlist_post[playlist_id]" value="<%= playlist.id %>">
      <%= playlist.escape('name') %>
    </option>

  <% }); %>

</select>
<input type="submit" class="submit-playlists" value="Add to Playlist">
<input type="submit" class="cancel-submit" value="X">
