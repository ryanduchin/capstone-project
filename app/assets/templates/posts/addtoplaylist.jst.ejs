<p>Add to Playlists:</p>
<form class="form-post-to-playlist">

<% userPlaylists.forEach(function (playlist) { %>
  <div class="checkbox">
    <label><input type="checkbox"
                  name="playlist_posts[playlist_id]"
                  value="<%= playlist.id %>">
      <%= playlist.escape('name') %>
    </label>
  </div>
<% }); %>

<input type="submit" class="submit-playlists" value="Submit">

</form>
