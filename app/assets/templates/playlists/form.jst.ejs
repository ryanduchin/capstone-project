<h1 class='form-title'>Create Playlist</h1>

<div class='row'>
  <div class="render-error"></div>
</div><br>

<div class='required-fields'>
  <div class='row'>

    <label class="col-md-4" for="playlist-name">Title: </label>
    <input
      type="text"
      name="name"
      id="playlist-name"
      class="col-md-8"
    ></input><br>

  </div>
</div>

<br><br>

<div class='row'>
  <div class='col-md-6'>
    <button type='submit' class="submit-playlist btn col-md-4 col-md-offset-6">Submit</button>
  </div>
  <div class='col-md-6'>
    <button type='cancel' class="cancel-playlist btn col-md-4 col-md-offset-2 btn-danger">Cancel</button>
  </div>
</div>
