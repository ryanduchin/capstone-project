<div class='container-fluid' id='user-show'>
  <div class='user-show-row-1 row'>

    <div class='col-md-4 col-md-offset-4'>
      <h1 class='user-show-title'>
        <%= user.escape('username') %>
      </h1>
      <div class="follow-button"></div>
    </div>
  </div>

  <br><br>

  <div class='user-show-row-2 row'>
    <div class="user-subitem-box col-md-10 col-md-offset-1">
      <h2 class='user-show-subtitle'>Playlists</h2>
      <div class='scroll-box'>
        <ul class="view-user-playlists scroll-box-list"></ul>
      </div>
    </div>
  </div>
  <div class='user-show-row-3 row'>
    <div class="user-subitem-box col-md-10 col-md-offset-1">
      <h2 class='user-show-subtitle'>Posts</h2>
      <div class='scroll-box'>
        <ul class="view-user-posts scroll-box-list"></ul>
      </div>
    </div>
  </div>
</div>
